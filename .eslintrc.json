{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/tests/*.js"],
  "rules": {
    "no-console": "off",
    "func-style": "error",
    "no-unused-vars": "warn",
    "no-plusplus": "off"
  }
}
